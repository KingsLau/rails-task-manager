<div class="container mt-3">
  <div class="row justify-content-center">
    <h1>My tasks</h1>
    <ul>
      <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete, data:{confirm: "Are you sure you want to delete this task?"} do %>
        <i class='far fa-trash-alt'></i>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="d-flex align-items-center">
    <p><%= link_to "Add a new task", new_task_path %></p>
  </div>
</div>
